#include <iostream>
#include <math.h>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	int x;
	cout << "Введите x" << endl;
	cin >> x;
	if (x > 0) {
		cout << "положительное ";
	}
	if (x<0) {
		cout << "отрицательное ";
	}
	if (x % 2!= 0) {
		cout << "нечетное число";
	}
	if (x % 2 == 0 && x!=0) {
		cout << "четное число";
	}
	if (x == 0) {
		cout << "нулевое число";
	}
}
