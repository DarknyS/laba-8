#include <iostream>
#include <math.h>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	double x, y;
	cout << "Введите x,y" << endl;
	cin >> x >> y;
	if (x > 0 && y > 0) {
		cout << "Точка лежит в 1ой координатной четверти" << endl;
	}
	if (x < 0 && y > 0) {
		cout << "Точка лежит во 2ой координатной четверти" << endl;
	}
	if (x < 0 && y < 0) {
		cout << "Точка лежит в 3ей координатной четверти" << endl;
	}
	if (x > 0 && y < 0) {
		cout << "Точка лежит в 4ой координатной четверти" << endl;
	}
}
